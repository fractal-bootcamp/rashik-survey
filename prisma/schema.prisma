generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]

}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Survey{
  id String @id
  name String
  questions Question[]
}

model Question{
  id String @id
  question String
  survey Survey @relation(fields: [surveyId],references: [id])
  surveyId String
  results Result[]
}

model Result{
  id String @id
  result String
  question Question @relation(fields: [questionId],references: [id])
  questionId String
}